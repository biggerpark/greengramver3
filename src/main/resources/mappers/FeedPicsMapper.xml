<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.green.greengram.feed.FeedPicsMapper">
    <insert id="insFeedPics">
        INSERT INTO feed_pic
        (feed_id,pic)
        VALUES
        <foreach collection="pics" item="pic" open="(" close=")" separator="),("> <!-- pics 를 pic 에 하나하나 담겠다 -->
            #{feedId},#{pic}
        </foreach>

        <!--

        <foreach collection="pics" item="pic" separator=",">
            (#{feedId},#{pic})
        </foreach>

        이렇게 쓸 수도 있다.
        -->
    </insert>

    <select id="selFeedPicList">
        SELECT pic
        FROM feed_pic
        WHERE feed_id=#{feedId}
    </select>

    <select id="selFeedPicListByFeedIds">
        SELECT   feed_id as feedId
                ,pic
        FROM feed_pic
        WHERE feed_id in(
        <foreach collection="feedIds" item="item" separator=",">
            #{item}
        </foreach>
        )
    </select>


</mapper>